<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:id="@+id/withoutLayout">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center|center_vertical"
            android:id="@+id/interiorLayout"
            android:background="@color/colorPrimary" android:weightSum="1">
        <ImageButton
                android:layout_width="49dp"
                android:layout_height="match_parent"
                android:background="@drawable/title_bar_back_btn"
                android:id="@+id/returnButton"
        />
        <TextView
                android:text="城市管理"
                android:gravity="left|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/returnTitle"
                android:textSize="20sp"
                android:textColor="@android:color/background_light" android:layout_weight="1.10"/>
        <EditText
                android:inputType="textPersonName"
                android:ems="10"
                android:background="@drawable/search_city_plain"
                android:drawableLeft="@drawable/city_search_bt_icon_pressed"
                android:id="@+id/searchCity"
                android:layout_width="170dp"
                android:layout_marginLeft="10dp"
                android:layout_height="26dp" android:textSize="14sp"/>
        <ImageButton
                android:layout_width="51dp"
                android:layout_height="match_parent"
                android:background="@drawable/add_normal"
                android:id="@+id/increaseCity"
        />
    </LinearLayout>

</LinearLayout>